@model List<NCTUShared.Models.TeamMember>
@{
    ViewBag.Title = "Team Members";
}
@Html.Partial("_Message")
<h2>@ViewBag.Title</h2>

@if (User.IsInRole("Admin") || User.IsInRole("Manager"))
{
    <div class="pull-right">
        <a href="@Url.Action("Add")" class="btn btn-primary btn-lg">
            <span class="glyphicon glyphicon-plus"></span> Add Team Member
        </a>
    </div>
}
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tm in Model)
            {
                <tr>
                    <td>@tm.Name</td>
                    <td>
                        <div class="pull-right">
                            <a href="@Url.Action("Detail", new { id = tm.Id })" class="btn btn-primary btn-xs margin-right">
                                <span class="glyphicon glyphicon-info-sign"></span><span class="hidden-xs"> Detail</span>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

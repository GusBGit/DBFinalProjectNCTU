@model NCTUWebApp.ViewModels.TeamTeamMembersAddViewModel

@{
    ViewBag.Title = "Add Team Member";
}

<h2>@ViewBag.Title</h2>

<h3>@Model.Team.DisplayText</h3>

<p>Select a player and role to add to this team.</p>

@using (Html.BeginForm())
{
    @Html.ValidationSummary("The following errors were found:", new { @class = "alert alert-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.TeamMemberId, new { @class = "control-label" })
        @Html.DropDownListFor(m => m.TeamMemberId,
            Model.TeamMemberSelectListItems, "", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.RoleId, new { @class = "control-label" })
        @Html.DropDownListFor(m => m.RoleId,
            Model.RoleSelectListItems, "", new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-success btn-lg margin-right">
        <span class="glyphicon glyphicon-save"></span> Save
    </button>
    <a href="@Url.Action("Detail", "Teams", new { id = Model.TeamId })" class="btn btn-warning btn-lg">
        <span class="glyphicon glyphicon-remove"></span> Cancel
    </a>
}
